<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
	

<mapper namespace="review">
	<insert id="insert" parameterType="review">
		
	</insert>
	
	<update id="update" parameterType="review">
	</update>
	
	<delete id="delete" parameterType="int">
	</delete>
	
	<select id="search" parameterType="int" resultType="review">
		SELECT *
		from reviewboard
      	where rno = #{rno}
	</select>
	
	<select id="searchAll" parameterType="reviewpagebean" resultType="review" >
		SELECT *
		from reviewBoard
		<where>
		<if test = "word != null">
			<choose>
				<when test="key== 'rno'">
					rno=#{word}
				</when>
				<when test="key== 'mno'">
					mno=#{word}
				</when>
				<when test="key== 'spoint'">
					spoint=#{word}
				</when>
				<when test="key== 'fno'">
					fno=#{word}
				</when>
				<when test="key== 'fname'">
					fname like '%'||#{word}||'%'
				</when>
				<when test="key== 'comments'">
					comments like '%'||#{word}||'%'
				</when>
			</choose>
		</if>
		</where>
		
		
	</select>	
	<select id="getCount" parameterType="reviewpagebean" resultType="int" >
		SELECT count(*)
		from reviewboard
		<where>
		<if test = "word != null">
			<choose>
				<when test="key== 'rno'">
					rno=#{word}
				</when>
				<when test="key== 'spoint'">
					spoint=#{word}
				</when>
				<when test="key== 'fname'">
					fname like '%'||#{word}||'%'
				</when>
				<when test="key== 'comments'">
					comments like '%'||#{word}||'%'
				</when>
			</choose>
		</if>
		</where>
	</select>
	
	<select id="getReviewNo" resultType="int">
		select review_no.nextval from dual
	</select>
	
</mapper>
